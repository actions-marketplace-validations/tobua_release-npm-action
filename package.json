{
  "name": "release-npm-action",
  "description": "Verifies, builds, versions and documents a plugin release to npm.",
  "version": "0.0.0",
  "repository": "github:tobua/release-npm-action",
  "homepage": "https://github.com/marketplace/actions/release-npm-action",
  "license": "MIT",
  "author": "Matthias Giger",
  "scripts": {
    "lint": "eslint .",
    "prepare": "ncc build index.js -o dist --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run lint && npm run prepare && npm run test"
  },
  "dependencies": {
    "@actions/core": "^1.6.0"
  },
  "type": "module",
  "main": "index.js",
  "keywords": [
    "github",
    "action",
    "javascript",
    "npm",
    "plugin",
    "semver"
  ],
  "devDependencies": {
    "@babel/preset-env": "^7.15.8",
    "@vercel/ncc": "^0.31.1",
    "eslint": "^8.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.4.1"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "env": {
      "es2021": true,
      "jest": true,
      "node": true
    },
    "parserOptions": {
      "sourceType": "module"
    },
    "extends": "eslint:recommended",
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "ignorePatterns": "dist"
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": [
        "babel-jest"
      ]
    }
  },
  "engines": {
    "node": ">= 14"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  }
}
